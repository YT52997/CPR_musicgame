

<MenuWidget>:
    canvas:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: self.width/12
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: { "center_x": .5, "center_y": .6}
    Button:
        font_size: self.width/4.2
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: { "center_x": .5, "center_y": .2}
        size_hint: .28, .08
        on_press: root.parent.on_menu_button_pressed()  # root->menu root.parent->main

        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size: self.width/5
        font_name: 'fonts/Eurostile.ttf'
        text: "Prev song"
        pos_hint: { "center_x": .2, "center_y": .2}
        size_hint: .224, .064
        on_press: root.parent.on_menu_button_L_pressed()  # root->menu root.parent->main

        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size: self.width/5
        font_name: 'fonts/Eurostile.ttf'
        text: "Next song"
        pos_hint: { "center_x": .8, "center_y": .2}
        size_hint: .224, .064
        on_press: root.parent.on_menu_button_R_pressed()  # root->menu root.parent->main

        background_normal: ''
        background_color: 1, .3, .4, .85